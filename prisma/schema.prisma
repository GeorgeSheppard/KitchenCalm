// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output = "../generated/prisma"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?
    accounts      Account[]
    sessions      Session[]
    
    // Recipe relationships
    recipes       Recipe[]
    preferences   UserPreference[]
    mealPlans     MealPlan[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

// Recipe Models
model Recipe {
    id          String            @id @default(cuid())
    uuid        String            @unique
    name        String
    description String
    images      RecipeImage[]
    components  RecipeComponent[]
    
    // User relationship
    createdBy   User              @relation(fields: [createdById], references: [id])
    createdById String
    
    // Meal planning and sharing relationships
    mealPlanItems MealPlanItem[]
    
    @@index([name])
    @@index([createdById])
}

model RecipeImage {
    id        String @id @default(cuid())
    timestamp BigInt
    key       String
    imageData String @db.Text // Base64 encoded image data
    mimeType  String
    
    // Recipe relationship
    recipe    Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
    recipeId  String
    
    @@index([recipeId])
}

model RecipeComponent {
    id           String              @id @default(cuid())
    uuid         String              @unique
    name         String
    storeable    Boolean             @default(false)
    servings     Int?
    order        Int                 
    
    // Recipe relationship
    recipe       Recipe              @relation(fields: [recipeId], references: [id], onDelete: Cascade)
    recipeId     String
    
    // Child relationships
    ingredients  RecipeIngredient[]
    instructions RecipeInstruction[]
    
    @@index([recipeId])
    @@index([order])
}

enum Unit {
    NONE
    MILLILITER
    LITER
    GRAM
    KILOGRAM
    CUP
    TEASPOON
    TABLESPOON
    NUMBER
}

model RecipeIngredient {
    id          String          @id @default(cuid())
    uuid        String          @unique
    name        String
    quantity    Float
    unit        Unit
    order       Int             
    
    // Component relationship
    component   RecipeComponent @relation(fields: [componentId], references: [id], onDelete: Cascade)
    componentId String
    
    @@index([componentId])
    @@index([order])
}

model RecipeInstruction {
    id          String          @id @default(cuid())
    uuid        String          @unique
    instruction String          @db.Text
    order       Int             
    optional    Boolean         @default(false)
    
    // Component relationship
    component   RecipeComponent @relation(fields: [componentId], references: [id], onDelete: Cascade)
    componentId String
    
    @@index([componentId])
    @@index([order])
}

// User Preferences for AI context
model UserPreference {
    id          String   @id @default(cuid())
    category    String   // e.g., "dietary", "cuisine", "chef_style", "equipment"
    preference  String   // Natural language preference
    context     String?  // Additional context
    confidence  Float    @default(1.0)
    source      String   @default("user") // "user", "inferred", "partner"
    isActive    Boolean  @default(true)
    
    // User relationship
    user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId      String
    
    @@index([userId])
    @@index([category])
}

// Meal Planning
model MealPlan {
    id        String         @id @default(cuid())
    name      String         @default("My Meal Plan")
    
    // User relationship
    user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
    userId    String
    
    // Items
    items     MealPlanItem[]
    
    @@index([userId])
}

model MealPlanItem {
    id         String   @id @default(cuid())
    date       DateTime
    mealType   String   // "breakfast", "lunch", "dinner", "snack"
    servings   Int      @default(1)
    notes      String?
    
    // MealPlan relationship
    mealPlan   MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
    mealPlanId String
    
    // Recipe relationship
    recipe     Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
    recipeId   String
    
    @@index([mealPlanId])
    @@index([recipeId])
    @@index([date])
}
